{
    "name": "novay/notify",
    "description": "Flexible flash notifications for Laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Noviyanto Rahmadi",
            "email": "novay@enterwind.com"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "autoload": {
        "psr-4": {
            "Novay\\Notify\\": "src/"
        },
        "files": [
            "src/Novay/Notify/Helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Novay\\Notify\\NotifyServiceProvider"
            ],
            "aliases": {
                "Notify" : "Novay\\Notify\\Facade\\Notify"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev", 
    "prefer-stable": true
}
